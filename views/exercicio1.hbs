<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta http-equiv="X-UA-Compatible" content="IE=edge" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>{{titulo}}</title>
    </head>
    <body>
        <header>
            <h1>{{titulo}}</h1>
            <h3>Número Positivo, negativo ou igual a zero</h3>
        </header>

        <form method="post" action="">
            <label for="valor">Número</label>
            <input type="number" id="valor" name="valor" value={{valor}} />
            <button type="submit">Enviar</button>
        </form>

        {{#if result}}
            <div>
                <p>
                    O valor
                    {{valor}}
                    é
                    <strong>{{result}}</strong>!
                </p>
            </div>
        {{/if}}

        <a href="/">Voltar a pagina principal</a>
    </body>
</html>