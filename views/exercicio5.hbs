<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta http-equiv="X-UA-Compatible" content="IE=edge" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>{{titulo}}</title>
    </head>
    <body>

        <header>
            <h1>{{titulo}}</h1>
            <h3>Calcular novo salário</h3>
        </header>

        <form method="post" action="/exercicio5">
            <label for="salario">Salário:</label>
            <input type="number" id="salario" name="salario" min="0"/>
            <br><br>
            <label for="reajuste">Reajuste(%):</label>
            <input type="number" id="reajuste" name="reajuste"/>
            <br><br>
            <button type="submit">Calcular</button>
        </form>

        {{#if salarioReajustado}}
        <div>
            <p>O novo salário é R$ {{salarioReajustado}}</p>
        </div>
        {{/if}}

        <br>
        <a href="/">Voltar a pagina principal</a>
    </body>
</html>