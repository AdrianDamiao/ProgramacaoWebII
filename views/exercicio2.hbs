<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta http-equiv="X-UA-Compatible" content="IE=edge" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>{{titulo}}</title>
    </head>
    <body>
        <header>
            <h1>{{titulo}}</h1>
            <h3>Tabuada</h3>
        </header>
        <form method="get" action="/exercicio2">
            <label for="numberInput">Digite um n√∫mero</label>
            <input type="number" id="numberInput" name="numberInput" value={{numero}} />
            <button type="submit" value="Register">Enviar</button>
        </form>

        {{#if numero}}
            <div>
                <h3>Tabuada do {{numero}}</h3>
                <ul>
                    {{#each (tabuada numero)}}
                        <li>{{../numero}} X {{@index}} = {{this}}</li>
                    {{/each}}
                </ul>
            </div>
        {{/if}}
        <a href="/">Voltar a pagina principal</a>
    </body>
</html>