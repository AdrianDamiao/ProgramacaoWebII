<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{{titulo}}</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi" crossorigin="anonymous" />
</head>

<body>
    <div class="container w-1/3">
        <main class="my-5">
            <header>
                <h1 class="w-bold mb-0 fs-1">{{titulo}}</h1>
                <h3 class="mt-2 fs-4 fw-normal">Tabuada</h3>
            </header>
            <div class="g-5 mt-4">
                <form method="get" action="/exercicio2">
                    <div class="col-12">
                        <label class="form-label" for="numberInput">Digite um número</label>
                        <input type="number" id="numberInput" name="numberInput" class="form-control"
                            value={{numero}} />
                    </div>
                    <button class="w-100 btn btn-primary btn-lg my-4" type="submit">Enviar</button>
                </form>
            </div>

            {{#if numero}}
            <div class="card">
                <div class="card-header">
                    Saída
                </div>
                <div class="card-body text-center">
                    <p class="card-text">
                    <h3>Tabuada do {{numero}}</h3>
                    <ul class="list-group">
                        {{#each (tabuada numero)}}
                        <li class="list-group-item">{{../numero}} X {{@index}} = {{this}}</li>
                        {{/each}}
                    </ul>
                    </p>
                </div>
            </div>
            {{/if}}

        </main>
        <footer class="my-2 pt-2 text-muted text-small">
            <a href="/">Voltar a pagina principal</a>
        </footer>
    </div>
</body>

</html>