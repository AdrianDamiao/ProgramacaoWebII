<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta http-equiv="X-UA-Compatible" content="IE=edge" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>{{titulo}}</title>
    </head>
    <body>

        <header>
            <h1>{{titulo}}</h1>
            <h3>Aposentadoria</h3>
        </header>

        <form method="post" action="/exercicio10">
            <label for="anoDeNascimento">Ano de Nascimento do Funcionário:</label>
            <input type="number" id="anoDeNascimento" name="anoDeNascimento" min="0" max="2022" />
            <br><br>
            <label for="anoDeIngresso">Ano de Ingresso na Empresa:</label>
            <input type="number" id="anoDeIngresso" name="anoDeIngresso" min="0" max="2022"/>
            <br><br>
            <button type="submit">Enviar</button>
        </form>


        {{#if resposta}}
        <br>
        <div>
            <p>Idade do Funcionário: {{idadeDoFuncionario}}</p>
            <p>Tempo de Trabalho na Empresa: {{tempoDeTrabalho}}</p>
            <p><strong>{{resposta}}</strong></p>
        </div>
        {{/if}}

        <br>
        <a href="/">Voltar a pagina principal</a>
    </body>
</html>