<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta http-equiv="X-UA-Compatible" content="IE=edge" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>{{titulo}}</title>
    </head>
    <body>

        <header>
            <h1>{{titulo}}</h1>
            <h3>Calcular Salário</h3>
        </header>

        <form method="post" action="/exercicio7">
            <label for="horas">Horas trabalhadas no mês:</label>
            <input type="number" id="horas" name="horas" min="0" step="0.01"/>
            <br><br>
            <label for="salario">Salário por hora:</label>
            <input type="number" id="salario" name="salario" min="0" step="0.01"/>
            <br><br>
            <button type="submit">Calcular</button>
        </form>

        {{#if salarioTotal}}
        <div>
            <p>O salário final é R$ {{salarioTotal}}</p>
        </div>
        {{/if}}

        <br>
        <a href="/">Voltar a pagina principal</a>
    </body>
</html>