<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta http-equiv="X-UA-Compatible" content="IE=edge" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>{{titulo}}</title>
    </head>
    <body>

        <header>
            <h1>{{titulo}}</h1>
            <h3>Calculo de Combustível</h3>
        </header>

        <form method="post" action="">
            <label for="litros">Litros Vendido: </label>
            <input type="number" id="litros" name="litros" step="0.01" />
            <br><br>
            <label for="tCombustivel">Tipo de Combustível:</label>
            <select id="tCombustivel" name="tCombustivel">
                <option value="gasolina" selected>Gasolina</option>
                <option value="alcool">Álcool</option>
            </select>
            <br><br>
            <button type="submit">Enviar</button>
        </form>

        {{#if valor}}
        <div>
            <p>O preço é R${{valor}}</p>
        </div>
        {{/if}}

        <br>
        <a href="/">Voltar a pagina principal</a>
    </body>
</html>