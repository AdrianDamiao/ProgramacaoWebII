<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta http-equiv="X-UA-Compatible" content="IE=edge" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>{{titulo}}</title>
    </head>
    <body>

        <header>
            <h1>{{titulo}}</h1>
            <h3>Calcular Média de Notas</h3>
        </header>

        <form method="post" action="">
            <label for="nota1">Primeira Nota:</label>
            <input type="number" id="nota1" name="nota1" min="0"/>
            <br><br>
            <label for="nota2">Segunda Nota:</label>
            <input type="number" id="nota2" name="nota2" min="0"/>
            <br><br>
            <label for="nota3">Terceira Nota:</label>
            <input type="number" id="nota3" name="nota3" min="0"/>
            <br><br>
            <button type="submit">Calcular</button>
        </form>

        {{#if resultado}}
        <div>
            <p>Sua média é {{media}}, você está {{resultado}}</p>
        </div>
        {{/if}}

        <br>
        <a href="/">Voltar a pagina principal</a>
    </body>
</html>