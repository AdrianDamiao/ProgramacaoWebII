<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta http-equiv="X-UA-Compatible" content="IE=edge" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>{{titulo}}</title>
    </head>
    <body>

        <header>
            <h1>{{titulo}}</h1>
            <h3>Calcular Salário Atual</h3>
        </header>

        <form method="post" action="">
            <label for="salarioFixo">Salário Fixo:</label>
            <input type="number" id="salarioFixo" name="salarioFixo" min="0" step="0.01"/>
            <br><br>
            <label for="vendas">Vendas:</label>
            <input type="number" id="vendas" name="vendas" min="0" step="0.01"/>
            <br><br>
            <button type="submit">Calcular</button>
        </form>

        {{#if salarioAtual}}
        <div>
            <p>O salário é R${{salarioAtual}}</p>
        </div>
        {{/if}}

        <br>
        <a href="/">Voltar a pagina principal</a>
    </body>
</html>